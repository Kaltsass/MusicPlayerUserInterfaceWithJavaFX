<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.control.Button?>

<?import javafx.scene.image.ImageView?>

<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1500.0" style="-fx-background-color: black;"

            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"

            fx:controller="org.example.musicplayeruserinterfacewithjavafx.RadioController">

    <children>
        <!-- Title Label -->
        <Label text="Live Radio" layoutX="50.0" layoutY="20.0" textFill="white" style="-fx-font-size: 36px; -fx-font-weight: bold;" />

        <!-- Now Playing Label -->
        <Label fx:id="nowPlayingLabel" layoutX="50.0" layoutY="100.0" text="Now Playing: Nothing"

               textFill="white" style="-fx-font-size: 20px;" />

        <!-- Album Cover Image -->
        <ImageView fx:id="albumCoverImageView" layoutX="50.0" layoutY="150.0"

                   fitHeight="300.0" fitWidth="300.0" preserveRatio="true"

                   style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.7), 10, 0.5, 0, 0);" />

        <!-- Next Track Button -->
        <Button fx:id="nextStationButton" layoutX="50.0" layoutY="500.0"

                text="Next Track" style="-fx-background-color: #ffffff; -fx-text-fill: #000000; -fx-font-size: 18px;" />

        <!-- Stop Button -->
        <Button fx:id="stopButton" layoutX="700.0" layoutY="540.0"
                text="Stop" style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 22px;" />

        <!-- Additional Padding (Optional) -->
    </children>

</AnchorPane>
