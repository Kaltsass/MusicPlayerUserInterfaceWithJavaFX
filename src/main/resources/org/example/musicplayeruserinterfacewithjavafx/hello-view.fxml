<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="890.0" prefWidth="1315.0" styleClass="primary_color" stylesheets="@../../../css/style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.musicplayeruserinterfacewithjavafx.HelloController">

  <!-- Left Navigation Panel -->
  <left>
    <VBox prefHeight="200.0" prefWidth="235.0" spacing="20.0" stylesheets="@../../../css/style.css" BorderPane.alignment="CENTER">
      <children>
        <!-- Menu Icon -->
        <ImageView fitHeight="39.0" fitWidth="36.0" pickOnBounds="true" preserveRatio="true">
          <image>
            <Image url="@../../../img/dots_menu.png" />
          </image>
          <VBox.margin>
            <Insets left="20.0" top="20.0" />
          </VBox.margin>
        </ImageView>

        <!-- Navigation Items -->
        <VBox prefHeight="152.0" prefWidth="235.0" spacing="7.0">
          <children>
            <VBox prefHeight="50.0" prefWidth="235.0">
              <children>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0" styleClass="selected">
                  <children>
                    <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                      <image>
                        <Image url="@../../../img/home_png.png" />
                      </image>
                    </ImageView>
                    <Label prefHeight="17.0" prefWidth="96.0" text="Home" textFill="WHITE">
                      <font>
                        <Font name="System Bold Italic" size="18.0" />
                      </font>
                    </Label>
                  </children>
                </HBox>
              </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0" stylesheets="@../../../css/style.css">
              <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../img/compass.png" />
                  </image>
                </ImageView>
                <Label prefHeight="17.0" prefWidth="96.0" text="Explore" textFill="#a1a1a1">
                  <font>
                    <Font name="System Bold Italic" size="18.0" />
                  </font>
                </Label>
              </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="20.0">
              <children>
                <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../img/radio_png.png" />
                  </image>
                </ImageView>
                <Label prefHeight="17.0" prefWidth="96.0" text="Radio" textFill="#a1a1a1">
                  <font>
                    <Font name="System Bold Italic" size="18.0" />
                  </font>
                </Label>
              </children>
            </HBox>
          </children>
        </VBox>

        <!-- Library Section -->
        <VBox prefHeight="363.0" prefWidth="235.0">
          <children>
            <Label prefHeight="54.0" prefWidth="193.0" text="YOUR LIBRARY" textFill="#a1a1a1">
              <VBox.margin>
                <Insets />
              </VBox.margin>
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </Label>
            <Label prefHeight="40.0" prefWidth="192.0" text="Made For You" textFill="WHITE">
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </Label>
            <Label prefHeight="40.0" prefWidth="192.0" text="Recently Played" textFill="WHITE" onMouseClicked="#toggleRecentlyPlayedVisibility" >
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </Label>

            <Label prefHeight="40.0" prefWidth="192.0" text="Liked Songs" textFill="WHITE">
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </Label>
            <Label prefHeight="40.0" prefWidth="192.0" text="Albums" textFill="WHITE">
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </Label>
            <Label prefHeight="40.0" prefWidth="192.0" text="Artists" textFill="WHITE">
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </Label>
            <Label prefHeight="40.0" prefWidth="192.0" text="Podcasts" textFill="WHITE">
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
            </Label>
          </children>
          <padding>
            <Insets left="20.0" right="20.0" />
          </padding>
        </VBox>

        <!-- Playlists -->
        <Label prefHeight="40.0" prefWidth="192.0" text="Playlists" textFill="#a1a1a1">
          <padding>
            <Insets left="20.0" right="10.0" />
          </padding>
          <font>
            <Font size="14.0" />
          </font>
        </Label>
        <Pane prefHeight="134.0" prefWidth="235.0" VBox.vgrow="ALWAYS" />

        <!-- New Playlist -->
        <HBox alignment="CENTER" prefHeight="75.0" prefWidth="235.0" spacing="20.0" styleClass="top-border" stylesheets="@../../../css/style.css">
          <children>
            <ImageView fitHeight="35.0" fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
              <image>
                <Image url="@../../../img/new_playlist.png" />
              </image>
            </ImageView>
            <Label prefHeight="40.0" prefWidth="108.0" text="New Playlist" textFill="#a1a1a1">
              <padding>
                <Insets left="10.0" right="10.0" />
              </padding>
              <font>
                <Font size="14.0" />
              </font>
            </Label>
          </children>
        </HBox>
      </children>
      <styleClass>
        <String fx:value="primary_color" />
        <String fx:value="secondary-color" />
      </styleClass>
    </VBox>
  </left>

  <!-- Center Section -->
  <center>
    <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" stylesheets="@../../../css/style.css" BorderPane.alignment="CENTER">
      <children>
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="1080.0" spacing="20.0">
          <children>
            <HBox alignment="CENTER_LEFT">
              <children>
                <Button mnemonicParsing="false" style="-fx-background-color: transparent;">
                  <graphic>
                    <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                      <image>
                        <Image url="@../../../img/goback.png" />
                      </image>
                    </ImageView>
                  </graphic>
                </Button>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../img/goback - Copy.png" />
                  </image>
                </ImageView>
              </children>
            </HBox>

            <!-- Search Bar -->
            <HBox alignment="CENTER" maxHeight="-Infinity" prefHeight="35.0" prefWidth="300.0" spacing="10.0" styleClass="search-container" stylesheets="@../../../css/style.css">
              <children>
                <ImageView fitHeight="25.0" fitWidth="25.0" pickOnBounds="true" preserveRatio="true">
                  <image>
                    <Image url="@../../../img/search_icon.png" />
                  </image>
                </ImageView>
                <TextField fx:id="searchBar" prefHeight="30.0" prefWidth="250.0" />
              </children>
            </HBox>
          </children>
        </HBox>
      </children>
    </VBox>
  </center>


  <!-- Playback Controls -->
  <!-- Playback Controls -->
  <bottom>
    <HBox prefHeight="60.0" prefWidth="1315.0" spacing="30.0" alignment="CENTER" styleClass="bottom-controls">
      <children>
        <!-- Previous Button -->
        <Button fx:id="prevButton" text="⏮ Previous" styleClass="control-button" onAction="#handlePreviousAction" />

        <!-- Play/Pause Button -->
        <Button fx:id="playPauseButton" text="⏯ Play" styleClass="control-button" onAction="#handlePlayPauseAction" />

        <!-- Next Button -->
        <Button fx:id="nextButton" text="⏭ Next" styleClass="control-button" onAction="#handleNextAction" />

        <!-- Playback Slider -->
        <Slider fx:id="playbackSlider" min="0.0" max="100.0" value="0.0" styleClass="playback-slider" prefWidth="800.0" />
      </children>
    </HBox>
  </bottom>


</BorderPane>
